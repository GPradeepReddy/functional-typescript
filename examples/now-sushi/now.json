{
  "version": 2,
  "builds": [
    {
      "src": "src/backend/**/*.ts",
      "use": "now-fts"
    },
    {
      "src": "src/frontend/**/*.ts",
      "use": "@now/node@canary"
    }
  ],
  "env": {
    "IS_NOW": "true"
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/src/backend/$1" },
    { "src": "/sushi/(.*)", "dest": "/src/frontend/sushi?type=$1" },
    { "src": "/(.*)", "dest": "/src/frontend/$1" }
  ]
}
